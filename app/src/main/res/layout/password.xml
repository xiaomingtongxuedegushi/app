
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
        <com.xuexiang.xui.widget.actionbar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tb_barHeight="65dp"
            app:tb_sideTextPadding="20dp"
            app:tb_actionPadding="20dp"
            android:background="#89a2fe"
            app:tb_useThemeColor="false"
            app:tb_leftImageResource="@color/purple_200"
            app:tb_titleText="修改密码" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="请填写旧密码和新密码:"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:layout_marginTop="150dp"/>
            <com.xuexiang.xui.widget.edittext.PasswordEditText
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/ps_former_password"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="输入旧密码"
                android:textColor="@color/textcolor"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                app:pet_enableIconAlpha="true" />
            <com.xuexiang.xui.widget.edittext.PasswordEditText
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/ps_new_password"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="请输入新密码"
                android:textColor="@color/textcolor"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                app:pet_enableIconAlpha="true" />
        </LinearLayout>



        <com.xuexiang.xui.widget.button.ButtonView
            app:textSolidColor="#89a2fe"
            android:id="@+id/ps_btn"
            style="@style/ButtonView.Green"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="240dp"
            android:text="确认修改"
            android:textSize="20dp"
            app:textSelectedSolidColor="@color/zi"
            app:textRadius="52dp" />


    </LinearLayout>
