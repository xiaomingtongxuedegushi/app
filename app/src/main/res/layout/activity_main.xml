    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#fff"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_marginTop="10dp"
        android:layout_height="380dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="16dp"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/edit_user"
                    android:layout_gravity="center"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="输入账号"
                    android:textColor="@color/textcolor"
                    android:textAlignment="viewStart"
                    />
            </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="60dp">
       <ImageView
           android:layout_marginLeft="10dp"
           android:layout_marginTop="19dp"
           android:background="@drawable/dlmm"
           android:layout_width="30dp"
           android:layout_height="30dp"/>
       <com.xuexiang.xui.widget.edittext.PasswordEditText
           android:layout_marginTop="15dp"
           android:id="@+id/edit_password"
           android:layout_width="260dp"
           android:layout_height="wrap_content"
           android:gravity="start"
           android:hint="输入密码"
           android:textColor="@color/textcolor"
           android:inputType="textPassword"
           android:textAlignment="viewStart"
           app:pet_enableIconAlpha="true" />
   </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/remember"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="记住密码"
                    android:textColor="@color/black" />
<!--                <TextView-->
<!--                    android:id="@+id/txt_register"-->
<!--                    android:layout_marginLeft="170dp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:text="用户注册"/>-->
            </LinearLayout>
            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/btn_login"
                style="@style/ButtonView.Green"
                android:layout_width="260dp"
                android:layout_height="45dp"
                app:textSolidColor="#89a2fe"
                android:text="登录"
                android:textSize="20dp"
                app:textSelectedSolidColor="@color/zi"
                android:layout_gravity="center"
                app:textRadius="52dp"
                android:layout_marginTop="20dp"/>
                <com.xuexiang.xui.widget.button.ButtonView
                    app:textSolidColor="#89a2fe"
                    android:id="@+id/btn_register"
                    style="@style/ButtonView.Green"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:textSelectedSolidColor="@color/zi"
                    android:text="注册"
                    android:textSize="20dp"
                    app:textRadius="52dp" />
            <com.xuexiang.xui.widget.button.ButtonView
                app:textSolidColor="#89a2fe"
                android:id="@+id/dl_btn_cp"
                style="@style/ButtonView.Green"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:textSelectedSolidColor="@color/zi"
                android:text="裁判入口"
                android:textSize="20dp"
                app:textRadius="52dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>